<div class="block-header">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Dashboard</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")"><i class="icon-home"></i></a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-4 col-md-6">
        <div class="card top_counter">
            <div class="body">
                <div class="icon"><i class="fa fa-user"></i> </div>
                <div class="content">
                    <div class="text">Học sinh</div>
                    <h5 class="number">@db.HocSinhs.Count()</h5>
                </div>
                <hr>
                <div class="icon"><i class="fa fa-users"></i> </div>
                <div class="content">
                    <div class="text">Giáo viên</div>
                    <h5 class="number">@db.GiaoViens.Count()</h5>
                </div>
                <hr>
                <div class="icon"><i class="fa fa-users"></i> </div>
                <div class="content">
                    <div class="text">Lớp học</div>
                    <h5 class="number">@db.Lops.Count()</h5>
                </div>
            </div>
        </div>
        <div class="card top_counter">
            <div class="body">
                <div class="icon"><i class="fa fa-university"></i> </div>
                <div class="content">
                    <div class="text">Phụ huynh</div>
                    <h5 class="number">@db.PhuHuynhs.Count()</h5>
                </div>
                <hr>
                <div class="icon"><i class="fa fa-university"></i> </div>
                <div class="content">
                    <div class="Header">Danh sách đăng kí dịch vụ</div>
                    <h5 class="number">@db.DangKyDichVus.Count()</h5>
                </div>
                <hr>
                <div class="icon"><i class="fa fa-university"></i> </div>
                <div class="content">
                    <div class="text">Dịch vụ</div>
                    <h5 class="number">@db.DichVus.Count()</h5>
                </div>

            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-5">
        <div class="card">
            <div class="header">
                <h2>Tỷ lệ giới tính học sinh</h2>
            </div>
            <div class="body text">
                <h6>Nam</h6>
                <input type="text" class="knob2" data-linecap="round" value="@tyleNam" data-width="100" data-height="100" data-thickness="0.15" data-fgColor="#49a9e5" readonly>
                <hr>
                <h6>Nữ</h6>
                <input type="text" class="knob2" data-linecap="round" value="@tyleNu" data-width="100" data-height="100" data-thickness="0.15" data-fgColor="#b880e1" readonly>
            </div>
        </div>
    </div>
    @*<div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="header">
                <h2>Salary Statistics</h2>
            </div>
            <div class="body">
                <div id="Salary_Statistics" class="chartist"></div>
            </div>
        </div>
    </div>*@
</div>

