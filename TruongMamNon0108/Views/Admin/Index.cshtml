
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@using SchoolManager.Models;
@{
    ViewBag.Title = "Thực đơn";
    TruongMamNonEntities db = new TruongMamNonEntities();
    int soNam = db.HocSinhs.Where(x => x.GioiTinh.Trim() == "Nam").Count();
    int soNu = db.HocSinhs.Where(x => x.GioiTinh.Trim() == "Nữ").Count();
    int tyleNam = (int)(((float)db.HocSinhs.Where(x => x.GioiTinh.Trim() == "Nam").Count() / db.HocSinhs.Count()) * 100);
    int tyleNu = (int)(((float)db.HocSinhs.Where(x => x.GioiTinh.Trim() == "Nữ").Count() / db.HocSinhs.Count()) * 100);
}
<link rel="stylesheet" href="../assets/vendor/chartist/css/chartist.min.css">
